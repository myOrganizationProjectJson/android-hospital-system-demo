<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" >
    <TextView android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="注册"
    	android:textSize="12pt"
    	android:gravity="center"
    	android:padding="5pt"/>
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="3pt">
        <TextView android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="用户名："
    		android:layout_weight="1"/>
        <EditText android:id="@+id/registerUserName"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.3"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="3pt">
        <TextView android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="密码："
    		android:layout_weight="1"/>
        <EditText android:id="@+id/registerUserPassword"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.3"
    		android:password="true"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="3pt">
        <TextView android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="密码确认："
    		android:layout_weight="1"/>
        <EditText android:id="@+id/registerUserSecondPassword"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:password="true"
    		android:layout_weight="0.3"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="3pt">
        <TextView android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="真实姓名："
    		android:layout_weight="1"/>
        <EditText android:id="@+id/registerUserTrueName"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.3"/>
    </LinearLayout>
    
    
    
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="3pt">
        <Button android:id="@+id/register"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="注册"
    		android:layout_weight="1"/>
        <Button android:id="@+id/registerBack"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="返回"
    		android:layout_weight="1"/>
    </LinearLayout>
    

</LinearLayout>